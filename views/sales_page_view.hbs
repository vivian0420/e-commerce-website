<div class="container">
    <div id="active-control" class="d-none {{activePage}}"></div>
    <div class="sale-banner col-sm-12 text-center">
        <p><span class="sales-title">Sales</span><span>  Save up to 70%</span></p>
    </div>
    <hr/>
    <br/>
    <h5>{{salesItems.length}} products</h5>
    <br/>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
      {{#each salesItems}}
        <div class="col">
          <div class="card border-0 h-100">
            <img src={{path}} alt={{name}} />
            <div class="card-body d-flex flex-column">
              <h6 class="card-title text-center">{{name}}</h6>
              <p class="card-text text-center mt-auto"><span class="text-decoration-line-through">${{price}}</span><span class="text-danger"> ${{newPrice}}</span></p>
              <a href="#" class="btn btn-primary mt-auto">Add to cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <!--for get current route -->
    <input type="text" class="get-route get-status d-none" value={{page}} id={{status}} />
  </div>