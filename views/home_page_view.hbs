<div class="body">
  <div id="active-control" class="d-none {{activePage}}"></div>
  <!--ad picture section-->
  <div class="container">
    <div class="ad-picture position-relative col-sm-12">
      <p>Celebrate your big day with us!</p>
      <a href="#new-arrivals">Learn more</a>
    </div>
  </div>
  <!--new arrivals section-->

  <div class="new-arrivals" id="new-arrivals">
    <div class="title text-center pt-5">
      <img
        class="arrival-icon"
        src="/images/new-arrival-icon.png"
        alt="arrival-icon"
      />
      <h1>New Arrivals</h1>
    </div>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
        {{#each arrivals}}
          <div class="col">
            <div class="card h-80 border-0">
              <img src={{path}} alt={{name}} />
              <div class="card-body d-flex flex-column">
                <a href="/product?id={{_id}}" class="btn mt-auto stretched-link border-0"></a>
             </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <!--discount section-->
  <div class="discount-items">
    <div class="title text-center pt-5">
      <img
        class="discountItems-icon"
        src="/images/discount-icon.png"
        alt="DiscountItems-icon"
      />
      <h1>New for Sale</h1>
    </div>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
        {{#each sales}}
          <div class="col">
            <div class="card h-80 border-0">
              <img src={{path}} alt={{name}} />
              <div class="card-body d-flex flex-column">
                <a href="/product?id={{_id}}" class="btn mt-auto stretched-link border-0"></a>
             </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <!-- category section-->
  <div class="categories">
    <div class="title text-center pt-5">
      <img
        class="category-icon"
        src="/images/category-icon.png"
        alt="category-icon"
      />
      <h1>Shop by Category</h1>
    </div>
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
        {{#each categories}}
          <div class="col">
            <div class="card h-80 border-0">
              <img src={{path}} alt={{name}} />
              <div class="card-body">
                <div class="card-body d-flex flex-column">
                <a href="/{{name}}" class="btn mt-auto stretched-link border-0"></a>
                </div>
                <h5 class="card-title text-center">{{name}}</h5>

              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <!--for get current route -->
  <input type="text" class="get-route get-status d-none" value={{page}} id={{status}} />
  <input type="text" class="d-none get-app-name" value={{appName}} />
</div>