<div class="container">
    <div id="active-control" class="d-none {{activePage}}"></div>
    <div class="container d-flex justify-content-center">
        <img class="col-sm-12" src="https://64.media.tumblr.com/a09eea8739d411a7d925108cbbb5ecad/afdc5d3e5c057621-92/s1280x1920/2267e42a505a58318c8ae6f5b8fb1d4a189e46ac.gif"
            alt="halloween-banner" />
    </div>
    <hr/>
    <br/>
    <h5>{{halloweenItems.length}} products</h5>
    <br/>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
      {{#each halloweenItems}}
        <div class="col">
          <div class="card border-0 h-100">
            <img src={{path}} alt={{name}} />
            <div class="card-body d-flex flex-column">
              <h6 class="card-title text-center">{{name}}</h6>
              <p class="card-text text-center mt-auto">${{price}}</p>
              <a href="#" class="btn btn-primary mt-auto">Add to cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
