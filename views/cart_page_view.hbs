<div class="container">
    <div class="row">
        <h1 class="col-sm-12 text-center mt-5">SHOPPING CART</h1>
    </div>
    
    <div class="row mt-5">
        <div class="col-8">
            {{#each jsonCartItems}}
                <div class="row individualItem">
                    <div class="col-4">
                        <a href="/product?id={{this.product._id}}"><img class="cartItemImage" src="{{this.product.path}}" alt="{{this.product.name}}" /></a>
                    </div>
                    <div class="col-8 ">
                        <a class="text-decoration-none" href="/product?id={{this.product._id}}"><p class="fs-6 fw-medium">{{this.product.name}}</p></a>
                        <p>Qty: <input class="cart_quantity" type="text" value={{this.quantity}} min="0" max={{this.product.quantity}}/>&nbsp;&nbsp;<span class="cart_quantity_alert"></span></p>
                        <p>ID: <span class="item-id">{{this.product._id}}</span></p>
                        <p>Price: <span class="{{#ifEquals this.product.price this.product.newPrice}}original-price{{else}}text-decoration-line-through{{/ifEquals}}">${{this.product.price}}</span>&nbsp;
                        <span class="{{#ifEquals this.product.price this.product.newPrice}}d-none{{else}}text-danger{{/ifEquals}}">${{this.product.newPrice}}</span></p>
                        <div class="cart_buttons" ><a class="cartEditButton">Edit</a>&nbsp;&nbsp;&nbsp;<a class="cartDeleteButton" >Delete</a></div>
                    </div>
                    
                </div>
                <br/>
            {{/each}}
        </div>
        <div class="col-8 login_prompt">
            <h4>Please log in to check your cart</h4>
            <a class='login'>Login</a>
        </div>
        <div class="col-4 bg-secondary-subtle cart_checkout">
            <form class="ms-5">
                <label class="mt-5" for="promo_code">Promo Code</label><br/>
                <input type="text" name="promo_code" id="promo_code" class="mt-3" placeholder="  Enter Promo Code"/>
                <div class="row mt-3"> 
                    <div class="col-5">
                        <p ><span>Subtotal: </span></p>
                        <p><span>Shipping: </span></p>
                        <p><span>Estimated Tax: </span></p>
                        <p><span>Total: </span></p>
                    </div>
                    <div class="col-5 text-end">
                        <p><span id="subtotal" class="subtotal_exclude_shipping">${{subtotal}}</span></p>
                        <p><span class="cart-shipping-fee"></span></p>
                        <p><span class="text-secondary">-----</span></p>
                        <p><span class="subtotal_include_shipping">${{subtotal}}</span></p>
                    </div>

                </div>
                <input class="cart_checkout_btn" type="submit" value="CHECKOUT(TBD)" />
                
            </form>
            <hr/>
                <img id="gift-wrap-img" class="mt-3 ms-5" src="images/gift-wrap.jpeg"/ alt="gift-wrap-img">
                <h6 class="text-center mt-3">COMPLIMENTARY GIFT WRAP</h6>
                <p class="text-center">Add our beautiful packaging and a gift receipt (with prices omitted) to all orders shipping within the continental U.S.</p>
        </div>
    </div>
    <input type="text" class="get-route get-status d-none" value={{page}} id={{status}} />
    <input type="text" class="d-none get-app-name" value={{appName}} />
    <input type="text" class="d-none get-cartitem-amount" value={{cartItemAmount}} />
</div>