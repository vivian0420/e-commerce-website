
  <div class="container">
    <div id="active-control" class="d-none {{activePage}}"></div>
    <div class="container d-flex justify-content-center h-50">
        <img class="col-sm-12" src="https://images.hive.blog/p/k75bsZMwYNu2L3iBMXq5y7xeiy1isFJsZxnMZSXuXEsxe4ee1cUkGyPr9xtMuoSZWL2HtLh5sxET4G95LgCp9gXmURk1y7W4FAmMibzQ8XNPiAWGmyuVW2FKB3uzw2z7crigcbX7AvvnQMgmTkTnvhZiKbtUaQDsT?format=match&mode=fit"
                alt="birthday-gif" />
    </div>
    <hr/>
    <br/>
    <h5>{{birthdayItems.length}} products</h5>
    <br/>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
      {{#each birthdayItems}}
        <div class="col">
          <div class="card border-0 h-100">
            <img src={{path}} alt={{name}} />
            <div class="card-body d-flex flex-column">
              <h6 class="card-title text-center">{{name}}</h6>
              <p class="card-text text-center mt-auto">${{price}}</p>
              <a href="#" class="btn btn-primary mt-auto">Add to cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
